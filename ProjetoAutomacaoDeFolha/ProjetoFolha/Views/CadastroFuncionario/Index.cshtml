@model List<CadastroFuncionarioModel>
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutMain";
}

<main id="main" class="main">

    <section class="section">
        <div class="text-center">
            <div class="pagetitle">
                <h1 class="display-4">Lista de Funcionários</h1>
            </div>
            <div class="d-flex flex-row bd-highlight mb-3">
                <a class="btn btn-primary" role="button" asp-controller="CadastroFuncionario" asp-action="CadastroFuncionario">Cadastrar novo funcionário</a>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Email</th>
                        <th scope="col">Admissão</th>
                        <th scope="col">Cargo</th>
                        <th scope="col">Salário</th>
                        <th scope="col">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (CadastroFuncionarioModel funcionario in Model)
                        {
                            <tr>
                                <th scope="row">@funcionario.Id</th>
                                <td>@funcionario.nome</td>
                                <td>@funcionario.email</td>
                                <td>@funcionario.dataAdmissao</td>
                                <td>@funcionario.cargo</td>
                                <td>@funcionario.salarioBruto.ToString("C")</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Exemplo básico">
                                        <a role="button" class="btn btn-primary" asp-route-id="@funcionario.Id" asp-controller="CadastroFuncionario" asp-action="EditarFuncionario">Editar</a>
                                        <a role="button" class="btn btn-danger" asp-route-id="@funcionario.Id">Inativar</a>
                                        <a role="button" class="btn btn-info" asp-route-id="@funcionario.Id">Detalhes</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="d-flex justify-content-between">
                <a role="button" class="btn btn-secondary" asp-controller="CadastroFuncionario" asp-action="Index"> Voltar</a>
            </div>
        </div>
    </section>
</main>
