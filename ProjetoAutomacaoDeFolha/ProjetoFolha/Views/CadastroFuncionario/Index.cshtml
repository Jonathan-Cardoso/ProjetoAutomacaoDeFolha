@model List<CadastroFuncionarioModel>
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutMain";
}

<main id="main" class="main">

    <section class="section">
        <div class="text-center">
            <div class="pagetitle">
                <h1 class="display-4">Lista de Funcionários</h1>
            </div>
            <div class="d-flex flex-row bd-highlight mb-3">
                <a class="btn btn-primary" role="button" asp-controller="CadastroFuncionario" asp-action="CadastroFuncionario">Cadastrar novo funcionário</a>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Email</th>
                        <th scope="col">Admissão</th>
                        <th scope="col">Cargo</th>
                        <th scope="col">Salário</th>
                        <th scope="col">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (CadastroFuncionarioModel funcionario in Model)
                        {
                            <tr>
                                <th scope="row">@funcionario.Id</th>
                                <td>@funcionario.nome</td>
                                <td>@funcionario.email</td>
                                <td>@funcionario.dataAdmissao</td>
                                <td>@funcionario.cargo</td>
                                <td>@funcionario.salarioBruto</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Exemplo básico">
                                        <a role="button" class="btn btn-primary" asp-router-id="@funcionario.Id" asp-controller="CadastroFuncionario" asp-action="EditarFuncionario">Editar</a>
                                        <a role="button" class="btn btn-warning" asp-router-id="@funcionario.Id">Inativar</a>
                                        <a role="button" class="btn btn-info" asp-router-id="@funcionario.Id">Detalhes</a>
                                    </div>
                                </td
                                <div class="mb-3">
                                    <div class="d-flex flex-row bd-highlight mb-3">
                                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary"> Voltar</a>
                                    </div>
                                </div>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </section>
</main>
