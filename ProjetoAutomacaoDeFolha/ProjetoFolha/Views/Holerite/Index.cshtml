@{
    ViewData["Title"] = "Holerite";
    Layout = "_LayoutMain";
}
@model HoleriteModel

<main id="main" class="main">

    <section class="section">
        <div class="text-center">
            <head>
                <div class="pagetitle">
                    <h1 class="display-4">Holerite de Funcionário</h1>
                </div>
                <style>
                    /* Estilos CSS para a formatação da tabela */
                    table {
                        width: 100%;
                        border-collapse: collapse;
                    }

                    th, td {
                        border: 1px solid #dddddd;
                        text-align: left;
                        padding: 8px;
                    }

                    tr:nth-child(even) {
                        background-color: #f2f2f2;
                    }
                </style>
            </head>
            <body>
                <table>
                    <tr>
                        <th>Descrição</th>
                        <th>Valor</th>
                    </tr>
                    <tr>
                        <td>Nome do Funcionário</td>
                        <td>João da Silva</td>
                    </tr>
                    <tr>
                        <td>Cargo</td>
                        <td>Analista de Vendas</td>
                    </tr>
                    <tr>
                        <td>Salário Base</td>
                        <td>R$ 3.500,00</td>
                    </tr>
                    <tr>
                        <td>Horas Extras</td>
                        <td>R$ 250,00</td>
                    </tr>
                    <tr>
                        <td>Desconto INSS</td>
                        <td>R$ 350,00</td>
                    </tr>
                    <tr>
                        <td>Desconto IR</td>
                        <td>R$ 100,00</td>
                    </tr>
                    <tr>
                        <td>Total de Vencimentos</td>
                        <td>R$ 3.750,00</td>
                    </tr>
                    <tr>
                        <td>Total de Descontos</td>
                        <td>R$ 450,00</td>
                    </tr>
                    <tr>
                        <td>Salário Líquido</td>
                        <td>R$ 3.300,00</td>
                    </tr>
                </table>
            </body>
        </div>
    </section>
</main>
