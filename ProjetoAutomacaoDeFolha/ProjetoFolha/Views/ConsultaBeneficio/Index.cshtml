}

<main id="main" class="main">
    <div class="text-center">
        <div class="pagetitle">
            <h1 class="display-4">Consulta Benefício</h1>
        </div>
        <section class="section">
            <div class="row">
                <div class="text-center">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-row bd-highlight mb-3">
                                <h5 class="card-title">Benefícios</h5>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="card">
                                        <div class="card-body">
